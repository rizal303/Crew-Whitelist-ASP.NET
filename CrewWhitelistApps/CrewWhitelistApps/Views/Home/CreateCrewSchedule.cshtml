@model IEnumerable<CrewWhitelistApps.Models.CrewScheduleModel>

@{
    ViewBag.Title = "Dashborad Administrator";
    Layout = "~/Views/Shared/_LayoutAdminWhitelist.cshtml";
}

<h4>Choose Crew</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(modelItem => item.idcrew)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a href="@Url.Action("AddScheduleCrew", "Home", new { id = item.idcrew})"><button class="btn btn-primary">Add Schedule</button></a>
            </td>
        </tr>
    }
</table>

<div>
    <a href="@Url.Action("DashboardAdminWhitelist", "Home")"><button class="btn btn-default">Back to list</button></a>
</div>